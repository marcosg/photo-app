  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="row">
          <div class="col">
            <%= render partial: "plan", locals: {heading: 'Premium Plan', price: '10', features:
                '<ul class="pl-3">
              <li>Unlimited Image Uploads</li>
              <li>Responsive design</li>
              <li>Access anywhere</li>
              <li class="extra">Unlimited projects</li>
            </ul>'}
